<form class="form-horizontal" role="form">
  {{#if achievement.id}}
  <input type="hidden" name="id" value="{{achievement.id}}">
  {{/if}}
  <input type="hidden" name="type" value="instant_win">
  <div class="form-group">
    <label for="achievement-name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" name="name" class="form-control" id="achievement-name" placeholder="My Wonderful Game" value="{{achievement.name}}">
    </div>
  </div>  
  <div class="form-group">
    <label for="achievement-name" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <textarea name="description" class="form-control" id="achievement-description" placeholder="Write a short description for this Achievement">{{achievement.description}}</textarea>
    </div>
  </div>
  {{#if achievement}}
  <div class="form-group">
    <label for="raw" class="col-sm-2 control-label">Raw data</label>
    <div class="col-sm-10">
      <a class="btn btn-link" data-hull-action="showRaw">Show raw data</a>
    </div>
  </div>
  {{/if}}

  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-2">
      {{#if error}}
        <p class="alert alert-danger">
          {{error}}
        </p>
      {{/if}}
    </div>
    <div class="col-sm-2">
      <button type="submit" class="btn-success pull-right btn btn-default">{{#if achievement.id}}Save{{else}}Create{{/if}}</button>
    </div>
  </div>
</form>
{{#if achievement}}
<pre class=" hidden raw"></pre>
{{/if}}

